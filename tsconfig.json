{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 